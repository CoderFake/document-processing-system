# Cấu hình môi trường chung
APP_ENV=development

# Cấu hình RabbitMQ
RABBITMQ_USER=admin
RABBITMQ_PASS=adminpassword
RABBITMQ_VHOST=/

# Cấu hình MinIO
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Cấu hình JWT
JWT_SECRET_KEY=your-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Cấu hình cổng dịch vụ
GATEWAY_PORT=6000
WORD_SERVICE_PORT=6001
EXCEL_SERVICE_PORT=6002
PDF_SERVICE_PORT=6003

# Cấu hình thư mục (bên trong container)
STORAGE_ROOT=/app/storage
TEMPLATES_ROOT=/app/templates
TEMP_DIR=/app/temp

# Cấu hình mạng Docker
DOCKER_NETWORK_NAME=document-network